{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "RogueGrid9",
  "version": "0.1.0",
  "identifier": "com.roguegrid9.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build", 
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173"
  },
  "app": {
    "windows": [
      {
        "title": "RogueGrid9",
        "width": 1280,
        "height": 800,
        "minWidth": 1024,
        "minHeight": 640,
        "resizable": true,
        "fullscreen": false,
        "maximized": false,
        "center": true,
        "visible": true,
        "devtools": true
      }
    ],
    "security": {
      "csp": null
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png", 
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/roguegrid9/roguegrid-desktop/releases/latest/download/latest.json"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDQwRjNCN0MyM0NGQzMzMzAKUldRenc4OGpmRHNQQklNdTJnRjJud20vUDZlMTIyaW1Cejc0clJRWlBHZlBiVjc2NWRMSktzeUYK"
    }
  }
}