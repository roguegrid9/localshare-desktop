{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "LocalShare",
  "version": "0.0.1",
  "identifier": "com.localshare.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build", 
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173"
  },
  "app": {
    "windows": [
      {
        "title": "LocalShare",
        "width": 1280,
        "height": 800,
        "minWidth": 1024,
        "minHeight": 640,
        "resizable": true,
        "fullscreen": false,
        "maximized": false,
        "center": true,
        "visible": true,
        "devtools": true,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.png"
    ],
    "windows": {
      "icon_path": "icons/icon.ico"
    },
    "resources": [
      "resources/frp/**/*"
    ],
    "createUpdaterArtifacts": true,
    "macOS": {
      "signingIdentity": null,
      "hardenedRuntime": true,
      "entitlements": "entitlements.plist",
      "exceptionDomain": null
    }
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://localshare-coordinator.fly.dev/updates/latest.json"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDQwRjNCN0MyM0NGQzMzMzAKUldRenc4OGpmRHNQQklNdTJnRjJud20vUDZlMTIyaW1Cejc0clJRWlBHZlBiVjc2NWRMSktzeUYK"
    }
  }
}